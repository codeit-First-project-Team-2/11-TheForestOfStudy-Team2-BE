}

model Study {
    id                  String @id @default(ulid())
    nickname            String
    title               String
    introduction        String
    background          String
    // 해시된 비밀번호
    password String
    totalPoint Int      @default(0)
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    habits Habit[]
    emojis Emoji[]
}

model Habit {
    id   String @id @default(ulid())
    name String
    studyId String
    study   Study  @relation(fields: [studyId], references: [id], onDelete: Cascade)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?
    records HabitRecord[]
}

model HabitRecord {
    id String @id @default(ulid())
    habitId String
    habit   Habit  @relation(fields: [habitId], references: [id], onDelete: Cascade)
    // isDone Boolean @default(true)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?
}

model Emoji {
    id   String @id @default(ulid())
    type String
    studyId String
    study   Study  @relation(fields: [studyId], references: [id], onDelete: Cascade)
}